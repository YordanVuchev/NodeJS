extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/product.css")     

block content 
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card-header
                            h1.product__title #{product.title}
                        div.card_image
                            img(src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png", alt="Book")
                        div.card__content
                            h2.product__price $21.32
                            p.product__description Some static text
                        .card__actions
                            button.btn Add to cart
        else 
            h1 No Products
     


